<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= userName %>'s Watchlist - Movie Recommendation System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/src/public/style.css">
    <style>
        .movie-img-thumb {
            width: 90px;
            height: 120px;
            object-fit: cover;
            border-radius: 6px;
            margin-right: 1.2rem;
            background: #222;
        }
        .movie-list-item {
            display: flex;
            align-items: flex-start;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <span style="margin-right:auto;color:#ff9800;">Welcome, <%= userName %>!</span>
        <a href="/home">Home</a>
        <a href="/logout">Logout</a>
    </nav>
    <div class="center-container">
        <div class="main-title">Your Watchlist</div>
        <% if (alert) { %>
            <div style="color: #ff9800; margin-bottom: 1rem;"><%= alert %></div>
        <% } %>
        <ul style="list-style:none;padding:0;width:100%;max-width:700px;margin:auto;">
            <% if (movies.length === 0) { %>
                <li style="color:#ff9800;text-align:center;">No movies in your watchlist.</li>
            <% } else { %>
                <% movies.forEach(function(m) { %>
                    <li class="movie-list-item" style="background:#232323cc;padding:1rem;margin:1rem 0;border-radius:8px;">
                        <img class="movie-img-thumb" src="<%= m.movie_image ? m.movie_image : '/src/public/default-movie.png' %>" alt="Movie Image" onerror="this.src='/src/public/default-movie.png'">
                        <div>
                            <h3 style="margin:0 0 0.5rem 0;">
                                <a href="/movie/<%= m.m_id %>" style="color:#ff9800;text-decoration:none;"><%= m.movie_title %></a>
                            </h3>
                        </div>
                    </li>
                <% }) %>
            <% } %>
        </ul>
    </div>
</body>
</html>
